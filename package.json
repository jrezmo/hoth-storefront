{
  "name": "hoth-storefront",
  "version": "1.0.0",
  "description": "Customer-facing e-commerce storefront",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon src/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd frontend && npm install && npm run build",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts && cd frontend && npm run lint",
    "type-check": "tsc --noEmit && cd frontend && npm run type-check",
    "clean": "rm -rf dist coverage .tsbuildinfo && cd frontend && npm run clean"
  },
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "express-rate-limit": "^8.0.0",
    "express-validator": "^7.0.0",
    "winston": "^3.10.0",
    "pg": "^8.11.0",
    "sqlite3": "^5.1.0",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/pg": "^8.10.0",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "nodemon": "^3.0.0",
    "supertest": "^6.3.0",
    "typescript": "^5.0.0",
    "concurrently": "^8.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts"
    ]
  },
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
